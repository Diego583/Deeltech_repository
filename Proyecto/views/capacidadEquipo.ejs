                <div class="line"></div>

                <table class="table table-hover table-dark">
                    <thead>
                        <tr>
                        <th scope="col">Integrantes</th>
                        <th scope="col">Horas</th>
                        </tr>
                    </thead>
                    <% for (let user of users) { %>
                        <tbody>
                            <td>
                                <%= user.nombre_usuario %>
                            </td>
                            <td>
                                <select class="form-control" name="horario" id="s<%= user.nombre_usuario %>" onchange="horario('<%= user.nombre_usuario %>' , '<%=id%>')">'
                                    <option selected value=" <%=user.tiempo_por_semana%>" class="font-weight-bold"> <%=user.tiempo_por_semana%> </option>
                                    <% for (var i = 1 ; i<51; i++) { %>
                                        <option value="<%= i %>" class="font-weight-bold" ><%= i%></option>
                                    <% } %>
                                </select>
                            </td>
                        </tbody>
                    <% } %>
                    </tbody>
                </table>
        </div>
